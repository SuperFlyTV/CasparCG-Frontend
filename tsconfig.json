    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react"
    },
    "include": ["./**/*.tsx", "./**/*.ts"],
    "exclude": ["./**/*.test.ts", "./src/client/", "./build/"]   
}